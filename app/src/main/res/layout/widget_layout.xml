<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Main Card Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_progress_pill"
        android:padding="20dp"
        android:elevation="8dp"
        android:outlineProvider="background">

        <!-- Header Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_wellness_tracker"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Stats Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/circular_progress_water_dynamic"
            android:padding="16dp"
            android:elevation="4dp"
            android:outlineProvider="background"
            android:layout_marginBottom="16dp">

            <!-- Habits Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_habits_progress"
                    android:textSize="14sp"
                    android:textColor="#E8F4F3"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/widget_habits_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_0"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Water Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/_water_intake"
                    android:textSize="14sp"
                    android:textColor="#E8F4F3"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/widget_water_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0_02"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Mood -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/current_mood"
                    android:textSize="14sp"
                    android:textColor="#E8F4F3"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/widget_mood_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_ll"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Add Water Button -->

        <!-- Footer -->
        <TextView
            android:id="@+id/widget_last_updated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/updated_just_now"
            android:textSize="10sp"
            android:textColor="#C8E6E5"
            android:gravity="center"
            android:fontFamily="sans-serif" />

    </LinearLayout>

</LinearLayout>