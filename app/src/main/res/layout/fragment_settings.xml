<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with App Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:padding="20dp"
            android:background="@drawable/settings_header_background">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="@string/_9"
                android:textSize="28sp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wellness_tracker"
                    android:textSize="22sp"
                    android:textColor="#1A1A1A"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/v2_0_professional_edition"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Water Tracking Card with Progress Visualization -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/daily_water_tracker"
                        android:textSize="20sp"
                        android:textColor="#1A1A1A"
                        android:textStyle="bold" />

                    <!-- Clickable Water Goal -->
                    <LinearLayout
                        android:id="@+id/water_goal_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/water_goal_clickable"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/tv_water_goal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_8"
                            android:textSize="16sp"
                            android:textColor="#4FACFE"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/glasses"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginStart="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_98"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Progress Visualization -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <!-- Circular Progress Bar -->
                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp">

                        <ProgressBar
                            android:id="@+id/progress_water_circular"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:progress="25"
                            android:max="100"
                            android:progressDrawable="@drawable/circular_progress_water_dynamic"
                            android:indeterminate="false" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/tv_water_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_25"
                                android:textSize="24sp"
                                android:textColor="#1A1A1A"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_water_current"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_2_8_glasses"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <!-- Progress Text -->
                    <TextView
                        android:id="@+id/tv_water_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/great_start_keep_hydrating"
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:layout_marginBottom="20dp" />

                    <!-- Water Intake Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btn_add_water"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="@string/add_glass"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:background="@drawable/button_primary_rounded"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/btn_reset_water"
                            android:layout_width="0dp"
                            android:layout_height="52dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="@string/reset"
                            android:textSize="15sp"
                            android:background="@drawable/button_outline_rounded"
                            android:textColor="#4FACFE" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Hydration Reminder Settings -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/system_control_activated_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smart_reminders"
                    android:textSize="20sp"
                    android:textColor="#1A1A1A"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Reminder Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/enable_smart_water_reminders"
                        android:textSize="16sp"
                        android:textColor="#333333" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false" />

                </LinearLayout>

                <!-- Reminder Interval -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reminder_frequency"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <SeekBar
                        android:id="@+id/seekBar_interval"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="5"
                        android:progress="2"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/tv_interval_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_30_min"
                        android:textSize="16sp"
                        android:textColor="#4FACFE"
                        android:textStyle="bold"
                        android:minWidth="60dp" />

                </LinearLayout>

                <!-- Interval Labels - UPDATED FOR 5-120 MIN RANGE -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_5_min"
                        android:textSize="10sp"
                        android:textColor="#999999"
                        android:gravity="start" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_120_min"
                        android:textSize="10sp"
                        android:textColor="#999999"
                        android:gravity="end" />

                </LinearLayout>

                <!-- Next Reminder Info -->
                <TextView
                    android:id="@+id/tv_next_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/reminders_are_disabled"
                    android:textSize="12sp"
                    android:textColor="#FF6E40"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:padding="8dp"
                    android:background="#F0F8FF" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- App Statistics Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wellness_dashboard"
                    android:textSize="20sp"
                    android:textColor="#1A1A1A"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

                <!-- Statistics Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Today's Habits -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/stats_card_background">

                        <TextView
                            android:id="@+id/tv_today_habits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_3"
                            android:textSize="22sp"
                            android:textColor="#4FACFE"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/completed_habits"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="6dp" />

                    </LinearLayout>

                    <!-- Unique Moods Tracked -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/stats_card_background"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/tv_unique_moods"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_2"
                            android:textSize="22sp"
                            android:textColor="#27AE60"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unique_moods"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="6dp" />

                    </LinearLayout>

                    <!-- Hydration Rate -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="@drawable/stats_card_background">

                        <TextView
                            android:id="@+id/tv_hydration_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_254"
                            android:textSize="22sp"
                            android:textColor="#FF6B6B"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hydration_rate"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="6dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- App Information -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?android:attr/windowSplashScreenIconBackgroundColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/academic_project"
                    android:textSize="18sp"
                    android:textColor="#1A1A1A"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wellness_tracker_v2_0"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bsc_hons_in_information_technology"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/it2010_mobile_application_development"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/faculty_of_computing_sliit"
                    android:textSize="12sp"
                    android:textColor="#999999" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

</ScrollView>